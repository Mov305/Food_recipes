<section class="bg-gray-100 min-h-screen">

  <button type="button" class="add-btn">
  <%= link_to "Add food", new_food_path() %></button>
  
  <div class="form">
    <table class="min-w-full divide-y-2 divide-gray-500 text-sm bg-slate-50 rounded-lg">
      <thead>
        <tr id="form_list" >
          <th class="whitespace-nowrap px-4 py-2 text-left font-medium text-gray-900">Food</th>
          <th class="whitespace-nowrap px-4 py-2 text-left font-medium text-gray-900">
            Measurement_unit(g)
          </th>
          <th class="whitespace-nowrap px-4 py-2 text-left font-medium text-gray-900" >Unit_price($)</th>
          <th class="whitespace-nowrap px-4 py-2 text-left font-medium text-gray-900">
            Actions
          </th>
          <th class="px-4 py-2"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @foods.each do |food| %>
          <tr>
            <td class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
              <%= food.name %>
            </td>
            <td class="whitespace-nowrap px-4 py-2 text-gray-700"><%= food.measurement_unit %></td>
            <td class="whitespace-nowrap px-4 py-2 text-gray-700"><%= food.price %></td>
            <td>
              <%= button_to "Remove", @food, method: :delete %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
