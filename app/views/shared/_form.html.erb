<%= form_with model: @food, url:"/foods", method: :post do |form| %>
    <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div class="form-group">
        <%= form.label :quantity %>
        <%= form.number_field :quantity %>
    </div>

    <div class="form-group">
        <%= form.label :measurement_unit %>
        <%= form.text_field :measurement_unit %>
    </div>
    

    <div class="form-group">
        <%= form.label :price %>
        <%= form.number_field :price %>
    </div>

    <%= form.submit "Create food", class: "submit-form" %>

<% end %>