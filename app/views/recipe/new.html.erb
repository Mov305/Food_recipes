<section class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8 p-4 md:w-1/2">
  <div class="mx-auto max-w-lg text-center">
    <h1 class="text-2xl font-bold sm:text-3xl">New Recipe</h1>
  </div>

  <%= form_with url: '/recipes', method: :post, class:"mx-auto mt-8 mb-0 max-w-md space-y-4" do |f|
  %>
  <div>
    <%= f.label :name, class:"sr-only" %>

    <div class="relative">
      <%= f.text_field :name, class:"w-full rounded-lg border-gray-200 p-4 pr-12 text-sm shadow-sm",
      placeholder:"Recipe Name" %>
    </div>
  </div>

  <div>
    <%= f.label :description, class:"sr-only" %>

    <div class="relative">
      <%= f.text_area :description, class:"w-full rounded-lg border-gray-200 p-3 text-sm",
      placeholder:"Enter the text", rows:"8" %>
    </div>
  </div>

  <div>
    <%= f.label :cooking_time, class:"sr-only" %>

    <div class="relative">
      <%= f.number_field :cooking_time, class:"w-full rounded-lg border-gray-200 p-4 pr-12 text-sm",
      placeholder:"Cooking Time" %>
    </div>
  </div>

  <div>
    <%= f.label :preparation_time, class:"sr-only" %>

    <div class="relative">
      <%= f.number_field :preparation_time, class:"w-full rounded-lg border-gray-200 p-4 pr-12
      text-sm", placeholder:"Preparation_time" %>
    </div>
  </div>

  <div class="flex justify-end">
    <%= f.label :public, class:"sr-only" %>
    <div class="relative flex gap-4">
      <div>public :</div>
      <%= f.check_box :public, class:" rounded-lg w-6 h-6 border-gray-200 ", value: false %>
    </div>
  </div>

  <div class="flex items-center justify-center">
    <%= f.submit "SUBMIT", class:"inline-block rounded-lg bg-blue-500 px-5 py-3 text-sm font-medium
    text-white" %>
  </div>
  <% end %>
</section>
